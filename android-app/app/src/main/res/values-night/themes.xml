<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light Theme -->
    <style name="Theme.RemoteWebcam" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/accent_secondary</item>
        <item name="colorPrimaryVariant">@color/accent_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/accent_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/card_background_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorSurfaceVariant">@color/palette_2</item>
        
        <!-- System bars -->
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>
