<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Full Screen Camera Preview (Background) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top Floating Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@drawable/gradient_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Status indicator (Clickable to show/hide stream URL) -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="● OFFLINE ▼"
            android:textColor="@color/offline_gray"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Resolution Spinner -->
        <Spinner
            android:id="@+id/spinnerResolution"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:minWidth="100dp"
            android:background="@drawable/spinner_background_floating"
            android:popupBackground="@color/card_background"
            android:dropDownWidth="wrap_content" />

    </LinearLayout>

    <!-- IP Address Floating Card (Center) - Initially hidden -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardIpAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:visibility="gone"
        app:cardBackgroundColor="#99000000"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STREAM URL"
                android:textColor="#99FFFFFF"
                android:textSize="10sp"
                android:textAllCaps="true"
                android:letterSpacing="0.15" />

            <TextView
                android:id="@+id/tvIpAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="http://192.168.1.100:8080"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:fontFamily="monospace"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvConnectionInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Connect your PC"
                android:textColor="#99FFFFFF"
                android:textSize="11sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Floating Controls -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:background="@drawable/gradient_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Control Buttons Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Switch Camera FAB -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnSwitchCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Switch Camera"
                app:srcCompat="@drawable/ic_switch_camera"
                app:backgroundTint="@color/palette_4"
                app:tint="@android:color/white"
                app:fabSize="normal"
                android:layout_marginEnd="24dp" />

            <!-- Main Start/Stop Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnStartStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Start/Stop Streaming"
                app:srcCompat="@drawable/ic_record"
                app:backgroundTint="@color/accent_secondary"
                app:tint="@android:color/white"
                app:fabSize="auto"
                app:fabCustomSize="72dp"
                app:maxImageSize="32dp" />

            <!-- Placeholder for symmetry -->
            <View
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="24dp"
                android:visibility="invisible" />

        </LinearLayout>

        <!-- Hint Text -->
        <TextView
            android:id="@+id/tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tap to start streaming"
            android:textColor="#AAFFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
